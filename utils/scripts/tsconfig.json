{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "outDir": "lib",
    "resolveJsonModule": true
  },
  "include": ["./*", "js/index.ts", "js/writeIntegration.ts", "js/writeGithubAction.ts", "js/utils.ts", "js/catalogue.ts"]
}
